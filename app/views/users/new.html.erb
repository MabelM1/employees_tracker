
    <h1>  Sign Up </h1>   
    <%= form_for @user  do |f| %>
        <% if flash[:error] != nil %>
            <div id="error_explanation">
                <h2>There were some errors:</h2>
                <ul>
                    <% flash[:error].each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
       

        <%= f.label :company_name %>
        <%= f.text_field :company_name %><br>
        
        <%= f.label :address%>
        <%= f.text_field :address %><br>
        <%= f.label :country %>
        <%= f.text_field :country %><br>

        <%= f.label :state %>
        <%= f.text_field :state %><br>

        <%= f.label :licence_number %>
        <%= f.text_field :licence_number %><br>

        <%= f.label :email %>
        <%= f.text_field :email %><br>

        <%= f.label :username %>
        <%= f.text_field :username %><br>

        <%= f.label :password %>
        <%= f.password_field :password%><br>

        <%= f.label :confirm_password %>
        <%= f.password_field  :password_confirmation%><br>

        <%= f.label :phone_number%>
        <%= f.text_field :phone_number %>
        <br> <br>
        <%= f.label :about_us %>
        <%= f.text_area(:about_us, size: '50x10') %>
      <br> <br>
    
        <%= f.submit %>
      <% end %>
